<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:padding="8dp">
        <ImageView
            android:id="@+id/imgProduk"
            android:layout_width="170dp"
            android:layout_height="165dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            tools:src="@color/colorAccent" />
        <TextView
            android:id="@+id/txtPerusahaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/imgProduk"
            android:layout_toRightOf="@id/imgProduk"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Nama Perusahaan" />
        <TextView
            android:id="@+id/txtProduk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_button"
            android:layout_below="@id/txtPerusahaan"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@id/imgProduk"
            android:layout_toRightOf="@id/imgProduk"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="Nama Barang" />
        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@id/imgProduk"
            android:layout_toRightOf="@id/imgProduk"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pesan Sekarang"
                android:textAllCaps="false"
                android:background="@drawable/shape"
                android:textColor="@color/bg_splash"
                android:drawableStart="@drawable/ic_shopping_cart"
                android:textSize="12sp"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>